<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- Example suppressions for common false positives -->

    <!-- Suppress test dependencies -->
    <suppress>
        <notes>Test dependencies that are not used in production</notes>
        <packageUrl regex="true">^pkg:maven/.*</packageUrl>
        <cve>CVE-.*</cve>
        <filePath regex="true">.*test.*</filePath>
    </suppress>

    <!-- Suppress development dependencies -->
    <suppress>
        <notes>Development dependencies that are not deployed</notes>
        <packageUrl regex="true">^pkg:npm/.*</packageUrl>
        <cve>CVE-.*</cve>
        <filePath regex="true">.*dev.*</filePath>
    </suppress>

    <!-- Suppress low-risk vulnerabilities in indirect dependencies -->
    <suppress>
        <notes>Low-risk vulnerabilities in indirect dependencies</notes>
        <cve>CVE-.*</cve>
        <severity>LOW</severity>
        <unscored>true</unscored>
    </suppress>

    <!-- Specific suppressions for known false positives -->
    <!-- Add specific CVEs here as needed -->

</suppressions>