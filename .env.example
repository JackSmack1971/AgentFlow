# .env.example - Comprehensive environment configuration template

# =============================================================================
# AgentFlow Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agentflow
REDIS_URL=redis://localhost:6379
QDRANT_URL=http://localhost:6333

# -----------------------------------------------------------------------------
# AI Service Configuration
# -----------------------------------------------------------------------------
# OpenAI (required for most AI operations)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (optional, for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Other AI Services (optional)
PERPLEXITY_API_KEY=your_perplexity_api_key_here
EXA_API_KEY=your_exa_api_key_here

# -----------------------------------------------------------------------------
# R2R RAG Configuration
# -----------------------------------------------------------------------------
R2R_BASE_URL=http://localhost:7272
R2R_API_KEY=your_r2r_api_key_here

# -----------------------------------------------------------------------------
# Mem0 Configuration
# -----------------------------------------------------------------------------
# Choose between hosted and OSS mode
MEM0_MODE=oss  # Options: oss, hosted
MEM0_API_KEY=your_mem0_api_key_here  # Only needed for hosted mode

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
APP_NAME=AgentFlow API
SECRET_KEY=your_secret_key_here_change_in_production
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
OPENAPI_URL=/openapi.json
API_PREFIX=/api/v1

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1
ENCRYPTION_KEY=base64_encoded_32_byte_key  # Required for crypto helpers

# -----------------------------------------------------------------------------
# Neo4j Configuration (for knowledge graphs)
# -----------------------------------------------------------------------------
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_URL=bolt://localhost:7687

# -----------------------------------------------------------------------------
# Development Configuration
# -----------------------------------------------------------------------------
# Set to false in production
DEVELOPMENT_MODE=true
RELOAD_ON_CHANGE=true

# Testing
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agentflow_test
